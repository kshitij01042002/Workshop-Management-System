<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303b79"
    tools:context=".UpdateStatus">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/jobcardnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="38dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="46dp"
                android:background="@drawable/buttons"
                android:padding="10dp"
                android:ems="10"
                android:hint="Enter Job Card Number"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#140000"
                android:textColorHint="#070000" />

            <Spinner
                android:id="@+id/currentstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="39dp"
                android:background="@drawable/buttons"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/update"
                android:layout_width="137dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="34dp"
                android:background="@drawable/buttons"
                android:text="Update" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="256dp"
                android:layout_height="59dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="cursive"
                android:text="Updated Status"
                android:textColor="#D0D2DB"
                android:textSize="34sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/list"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#303b79"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>