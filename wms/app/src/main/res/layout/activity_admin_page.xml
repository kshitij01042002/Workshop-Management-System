<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303b79"
    tools:context=".AdminPage">

    <Button
        android:id="@+id/employeemanagement"
        android:layout_width="173dp"
        android:layout_height="0dp"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/buttons"
        android:onClick="EmployeeManagement"
        android:text="Employee Management"
        app:layout_constraintBottom_toTopOf="@+id/Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Update"
        android:layout_width="173dp"
        android:layout_height="0dp"
        android:layout_marginBottom="81dp"
        android:background="@drawable/buttons"
        android:onClick="UpdateStatus"
        android:text="Update Status"
        app:layout_constraintBottom_toTopOf="@+id/View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employeemanagement" />

    <Button
        android:id="@+id/View"
        android:layout_width="173dp"
        android:layout_height="0dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/buttons"
        android:onClick="CheckStatus"
        android:text="CheckStatus"
        app:layout_constraintBottom_toTopOf="@+id/checkbystatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Update" />

    <Button
        android:id="@+id/checkbystatus"
        android:layout_width="173dp"
        android:layout_height="0dp"
        android:layout_marginBottom="133dp"
        android:background="@drawable/buttons"
        android:onClick="CheckStatus"
        android:text="CheckStatus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/View" />

</androidx.constraintlayout.widget.ConstraintLayout>